{
  "autoload": {
    "psr-4": {
      "Minifram\\": "app/"
    },
    "files": [
      "config/database.php",
      "config/app.php"
    ]
  },
  "require-dev": {
    "phpmetrics/phpmetrics": "^2.8",
    "pestphp/pest": "^2.2"
  },
  "config": {
    "platform": {
        "php": "8.2"
    }
  },
  "scripts": {
    "test": "docker container exec -it $(docker ps -q -f name=minifram-php) bash -c \"cd minifram-php && ./vendor/bin/pest\" -d",
    "env": "cp .env.example .env"
  },
  "require": {
    "symfony/dotenv": "^6.2",
    "psr/http-message": "^1.0"
  }
}
